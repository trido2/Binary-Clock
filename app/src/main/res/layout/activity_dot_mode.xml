<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:paddingBottom="16dp"
    android:paddingLeft="16dp"
    android:paddingRight="16dp"
    android:paddingTop="16dp"
    tools:context=".DotMode">

    <TextView
        android:id="@+id/dotTime"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="TextView"
        android:visibility="invisible" />

    <TextView
        android:id="@+id/dotBinaryTime"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="TextView"
        android:visibility="invisible" />

    <TableLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center">

            <TextView
                android:id="@+id/textView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="40dp"
                android:gravity="center_horizontal"
                android:layout_span="4"
                android:padding="20dip"
                android:text="Dot Mode" />
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:text=""
                android:layout_weight="1"
                android:padding="5dip"
                android:gravity="center"/>
            <TextView
                android:text="Hour"
                android:textSize="20dp"
                android:layout_weight="1"
                android:padding="5dp"
                android:gravity="center"/>
            <TextView
                android:text="Minute"
                android:textSize="20dp"
                android:layout_weight="1"
                android:padding="5dp"
                android:gravity="center"/>
            <TextView
                android:text="Second"
                android:textSize="20dp"
                android:layout_weight="1"
                android:padding="5dp"
                android:gravity="center"/>
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:layout_weight="1"
                android:gravity="center"
                android:padding="5dip"
                android:text="32"
                android:textSize="20dp" />

            <TextView
                android:id="@+id/hour_32"
                android:layout_weight="1"
                android:gravity="center"
                android:padding="5dip"
                android:text=""
                android:textSize="20dp" />

            <TextView
                android:id="@+id/minute_32"
                android:layout_weight="1"
                android:gravity="center"
                android:padding="5dip"
                android:text=""
                android:textSize="20dp" />

            <TextView
                android:id="@+id/second_32"
                android:layout_marginRight="10dp"
                android:layout_weight="1"
                android:gravity="center"
                android:padding="5dip"
                android:text=""
                android:textSize="20dp" />
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:text="16"
                android:textSize="20dp"
                android:layout_weight="1"
                android:padding="5dip"
                android:gravity="center"/>
            <TextView
                android:text=""
                android:textSize="20dp"
                android:id ="@+id/hour_16"
                android:layout_weight="1"
                android:padding="5dip"
                android:gravity="center"
                />
            <TextView
                android:text=""
                android:textSize="20dp"
                android:id ="@+id/minute_16"
                android:layout_weight="1"
                android:padding="5dip"
                android:gravity="center"
                />
            <TextView
                android:text=""
                android:textSize="20dp"
                android:id ="@+id/second_16"
                android:layout_marginRight="10dp"
                android:layout_weight="1"
                android:padding="5dip"
                android:gravity="center"
                />
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:text="8"
                android:textSize="20dp"
                android:layout_weight="1"
                android:padding="5dip"
                android:gravity="center"/>
            <TextView
                android:text=""
                android:textSize="20dp"
                android:id ="@+id/hour_8"
                android:layout_weight="1"
                android:padding="5dip"
                android:gravity="center"
                />
            <TextView
                android:text=""
                android:textSize="20dp"
                android:id ="@+id/minute_8"
                android:layout_weight="1"
                android:padding="5dip"
                android:gravity="center"
                />
            <TextView
                android:text=""
                android:textSize="20dp"
                android:id ="@+id/second_8"
                android:layout_marginRight="10dp"
                android:layout_weight="1"
                android:padding="5dip"
                android:gravity="center"
                />
        </TableRow>
        <TableRow
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:text="4"
                android:textSize="20dp"
                android:layout_weight="1"
                android:padding="5dip"
                android:gravity="center"/>
            <TextView
                android:text=""
                android:textSize="20dp"
                android:id ="@+id/hour_4"
                android:layout_weight="1"
                android:padding="5dip"
                android:gravity="center"
                />
            <TextView
                android:text=""
                android:textSize="20dp"
                android:id ="@+id/minute_4"
                android:layout_weight="1"
                android:padding="5dip"
                android:gravity="center"
                />
            <TextView
                android:text=""
                android:textSize="20dp"
                android:id ="@+id/second_4"
                android:layout_marginRight="10dp"
                android:layout_weight="1"
                android:padding="5dip"
                android:gravity="center"
                />
        </TableRow>
        <TableRow
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:text="2"
                android:textSize="20dp"
                android:layout_weight="1"
                android:padding="5dip"
                android:gravity="center"/>
            <TextView
                android:text=""
                android:textSize="20dp"
                android:id ="@+id/hour_2"
                android:layout_weight="1"
                android:padding="5dip"
                android:gravity="center"
                />
            <TextView
                android:text=""
                android:textSize="20dp"
                android:id ="@+id/minute_2"
                android:layout_weight="1"
                android:padding="5dip"
                android:gravity="center"
                />
            <TextView
                android:text=""
                android:textSize="20dp"
                android:id ="@+id/second_2"
                android:layout_marginRight="10dp"
                android:layout_weight="1"
                android:padding="5dip"
                android:gravity="center"
                />
        </TableRow>
        <TableRow
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:text="1"
                android:textSize="20dp"
                android:layout_weight="1"
                android:padding="5dip"
                android:gravity="center"/>
            <TextView
                android:text=""
                android:textSize="20dp"
                android:id ="@+id/hour_1"
                android:layout_weight="1"
                android:padding="5dip"
                android:gravity="center"
                />
            <TextView
                android:text=""
                android:textSize="20dp"
                android:id ="@+id/minute_1"
                android:layout_weight="1"
                android:padding="5dip"
                android:gravity="center"
                />
            <TextView
                android:text=""
                android:textSize="20dp"
                android:id ="@+id/second_1"
                android:layout_marginRight="10dp"
                android:layout_weight="1"
                android:padding="5dip"
                android:gravity="center"
                />
        </TableRow>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:orientation="horizontal">

            <Button
                android:id="@+id/dotModeSelectTimeZone"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Select Time Zone" />

            <Button
                android:id="@+id/numericalMode"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Numerical Mode" />

        </LinearLayout>

    </TableLayout>



</LinearLayout>